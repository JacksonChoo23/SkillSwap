<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    <%= title || 'Error' %> - SkillSwap MY
  </title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body class="bg-primary bg-gradient vh-100 d-flex align-items-center justify-content-center">
  <div class="container" style="max-width: 500px;">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
      <div class="card-body p-5 text-center">
        <!-- Error Icon -->
        <div
          class="bg-primary bg-gradient rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4 shadow"
          style="width: 100px; height: 100px;">
          <% if (error && error.status===404) { %>
            <i class="fas fa-search fa-3x text-white"></i>
            <% } else if (error && error.status===403) { %>
              <i class="fas fa-lock fa-3x text-white"></i>
              <% } else if (error && error.status===401) { %>
                <i class="fas fa-user-lock fa-3x text-white"></i>
                <% } else { %>
                  <i class="fas fa-exclamation-triangle fa-3x text-white"></i>
                  <% } %>
        </div>

        <!-- Error Code -->
        <% if (error && error.status) { %>
          <div class="display-1 fw-bold text-primary mb-2 opacity-25" style="line-height: 1;">
            <%= error.status %>
          </div>
          <% } %>

            <!-- Error Title -->
            <h1 class="h3 mb-3 text-dark fw-bold">
              <%= title || 'Oops! Something went wrong' %>
            </h1>

            <!-- Error Message -->
            <p class="text-muted mb-4">
              <%= message || 'An unexpected error occurred. Please try again later.' %>
            </p>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-center gap-3 mb-4">
              <a class="btn btn-outline-secondary px-4 rounded-pill" href="javascript:history.back()">
                <i class="fas fa-arrow-left me-2"></i>Go Back
              </a>
              <a class="btn btn-primary px-4 rounded-pill shadow-sm" href="/">
                <i class="fas fa-home me-2"></i>Home
              </a>
            </div>

            <!-- Quick Links -->
            <div class="border-top pt-4 mt-2">
              <p class="small text-muted mb-3">Suggested links</p>
              <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a href="/browse" class="text-decoration-none small fw-semibold">
                  <i class="fas fa-users me-1"></i>Users
                </a>
                <a href="/listings" class="text-decoration-none small fw-semibold">
                  <i class="fas fa-list me-1"></i>Listings
                </a>
                <a href="/about" class="text-decoration-none small fw-semibold">
                  <i class="fas fa-info-circle me-1"></i>About
                </a>
              </div>
            </div>

            <!-- Debug Info (Development Only) -->
            <% if (error && error.stack) { %>
              <div class="mt-4 text-start">
                <button class="btn btn-sm btn-link text-decoration-none text-muted w-100" type="button"
                  data-bs-toggle="collapse" data-bs-target="#errorStack">
                  <i class="fas fa-code me-1"></i>Technical Details
                </button>
                <div class="collapse mt-2" id="errorStack">
                  <pre class="bg-dark text-white p-3 rounded-3 small shadow-inner"
                    style="max-height: 200px; overflow: auto; font-size: 0.7rem;"><%= error.stack %></pre>
                </div>
              </div>
              <% } %>
      </div>
    </div>

    <!-- Footer -->
    <p class="text-center text-white-50 small mt-4">
      <i class="fas fa-exchange-alt me-1"></i>SkillSwap MY
    </p>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>