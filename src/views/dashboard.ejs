<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Welcome back, <%= user.name %>!</h1>
    <span class="text-muted small">Last updated: <%= new Date().toLocaleString() %></span>
</div>

<!-- Quick Stats Row -->
<div class="row g-3 mb-4">
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm h-100 bg-primary text-white">
            <div class="card-body text-center">
                <i class="fas fa-calendar-check fa-2x mb-2"></i>
                <div class="h3 mb-0">
                    <%= stats.totalSessions %>
                </div>
                <small>Total Sessions</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm h-100 bg-success text-white">
            <div class="card-body text-center">
                <i class="fas fa-check-circle fa-2x mb-2"></i>
                <div class="h3 mb-0">
                    <%= stats.completedSessions %>
                </div>
                <small>Completed</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm h-100 bg-warning text-dark">
            <div class="card-body text-center">
                <i class="fas fa-clock fa-2x mb-2"></i>
                <div class="h3 mb-0">
                    <%= stats.upcomingSessions %>
                </div>
                <small>Upcoming</small>
            </div>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="card border-0 shadow-sm h-100 bg-info text-white">
            <div class="card-body text-center">
                <i class="fas fa-star fa-2x mb-2"></i>
                <div class="h3 mb-0">
                    <%= stats.averageRating || 'N/A' %>
                </div>
                <small>Avg Rating (<%= stats.ratingsCount %>)</small>
            </div>
        </div>
    </div>
</div>

<!-- Second Stats Row -->
<div class="row g-3 mb-4">
    <div class="col-md-3 col-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 rounded p-3 me-3">
                        <i class="fas fa-chalkboard-teacher text-primary"></i>
                    </div>
                    <div>
                        <div class="h5 mb-0">
                            <%= stats.teachingSkills %>
                        </div>
                        <small class="text-muted">Teaching Skills</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 rounded p-3 me-3">
                        <i class="fas fa-graduation-cap text-success"></i>
                    </div>
                    <div>
                        <div class="h5 mb-0">
                            <%= stats.learningSkills %>
                        </div>
                        <small class="text-muted">Learning Skills</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 rounded p-3 me-3">
                        <i class="fas fa-list text-warning"></i>
                    </div>
                    <div>
                        <div class="h5 mb-0">
                            <%= stats.activeListings %>/<%= stats.myListings %>
                        </div>
                        <small class="text-muted">Active Listings</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="bg-danger bg-opacity-10 rounded p-3 me-3">
                        <i class="fas fa-bell text-danger"></i>
                    </div>
                    <div>
                        <div class="h5 mb-0">
                            <%= stats.unreadNotifications %>
                        </div>
                        <small class="text-muted">Notifications</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row g-4">
    <!-- Session Activity Chart -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h6 class="mb-0 fw-bold">Session Activity (Last 7 Days)</h6>
            </div>
            <div class="card-body">
                <canvas id="activityChart" height="120"></canvas>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3">
                <h6 class="mb-0 fw-bold">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/match" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Find Matches
                    </a>
                    <a href="/listings/new" class="btn btn-outline-primary">
                        <i class="fas fa-plus me-2"></i>Create Listing
                    </a>
                    <a href="/profile" class="btn btn-outline-secondary">
                        <i class="fas fa-user me-2"></i>Edit Profile
                    </a>
                    <a href="/browse" class="btn btn-outline-secondary">
                        <i class="fas fa-users me-2"></i>Browse Users
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bottom Row -->
<div class="row g-4 mt-2">
    <!-- Upcoming Sessions -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between">
                <h6 class="mb-0 fw-bold">Upcoming Sessions</h6>
                <a href="/sessions" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                <% if (!upcomingSessionsList || upcomingSessionsList.length===0) { %>
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-calendar-times fa-2x mb-2"></i>
                        <p class="mb-0">No upcoming sessions</p>
                    </div>
                    <% } else { %>
                        <ul class="list-group list-group-flush">
                            <% upcomingSessionsList.forEach(s=> { %>
                                <li class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>
                                                <%= s.skill?.name || 'Session' %>
                                            </strong>
                                            <br>
                                            <small class="text-muted">
                                                <% if (s.teacherId===user.id) { %>
                                                    Teaching <%= s.student?.name || 'Student' %>
                                                        <% } else { %>
                                                            Learning from <%= s.teacher?.name || 'Teacher' %>
                                                                <% } %>
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-warning text-dark">
                                                <%= new Date(s.startAt).toLocaleDateString() %>
                                            </span>
                                            <br>
                                            <small>
                                                <%= new Date(s.startAt).toLocaleTimeString([], {hour: '2-digit' ,
                                                    minute:'2-digit'}) %>
                                            </small>
                                        </div>
                                    </div>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>
            </div>
        </div>
    </div>

    <!-- My Skills -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 py-3 d-flex justify-content-between">
                <h6 class="mb-0 fw-bold">My Skills</h6>
                <a href="/profile" class="btn btn-sm btn-outline-primary">Manage</a>
            </div>
            <div class="card-body p-0">
                <% if (!mySkills || mySkills.length===0) { %>
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-lightbulb fa-2x mb-2"></i>
                        <p class="mb-0">No skills added yet</p>
                        <a href="/profile" class="btn btn-sm btn-primary mt-2">Add Skills</a>
                    </div>
                    <% } else { %>
                        <ul class="list-group list-group-flush">
                            <% mySkills.forEach(us=> { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <% if (us.type==='teach' ) { %>
                                            <span class="badge bg-success me-2">Teaching</span>
                                            <% } else { %>
                                                <span class="badge bg-primary me-2">Learning</span>
                                                <% } %>
                                                    <%= us.Skill?.name || 'Skill' %>
                                                        <% if (us.Skill?.Category?.name) { %>
                                                            <small class="text-muted ms-1">(<%= us.Skill.Category.name
                                                                    %>)</small>
                                                            <% } %>
                                    </div>
                                    <span class="badge bg-light text-dark">
                                        <%= us.level || '-' %>
                                    </span>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Tips Summary -->
<div class="row g-4 mt-2">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
                <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                    <i class="fas fa-coins text-success fa-lg"></i>
                </div>
                <div>
                    <div class="h4 mb-0 text-success">+<%= stats.tipsReceived %>
                    </div>
                    <small class="text-muted">Tips Received</small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body d-flex align-items-center">
                <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                    <i class="fas fa-gift text-info fa-lg"></i>
                </div>
                <div>
                    <div class="h4 mb-0 text-info">-<%= stats.tipsSent %>
                    </div>
                    <small class="text-muted">Tips Sent</small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<div id="chartData" data-activity="<%= sessionActivity %>" style="display:none;"></div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const activityData = JSON.parse(document.getElementById('chartData').dataset.activity);

        new Chart(document.getElementById('activityChart'), {
            type: 'bar',
            data: {
                labels: activityData.map(d => d.date),
                datasets: [{
                    label: 'Sessions',
                    data: activityData.map(d => d.count),
                    backgroundColor: 'rgba(13, 110, 253, 0.7)',
                    borderRadius: 5
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });
    });
</script>