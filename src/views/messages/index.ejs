<% const me=user || {}; const items=Array.isArray(threads) ? threads : []; %>

  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 mb-0">Messages</h1>
  </div>

  <% if (items.length===0) { %>
    <div class="card border-0 shadow-sm">
      <div class="card-body text-center py-5">
        <i class="fas fa-comments fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">No conversations yet</h5>
        <p class="text-muted small">Start a conversation by visiting a user's profile and clicking "Message"</p>
        <a href="/browse" class="btn btn-primary">Browse Users</a>
      </div>
    </div>
    <% } else { %>
      <div class="list-group shadow-sm">
        <% items.forEach(t=> {
          const partner = (t.creatorId === me.id) ? t.participant : t.creator;
          const partnerName = partner?.name || 'Unknown';
          const partnerImage = partner?.profileImage || null;
          const listingTitle = t.Listing?.title || null;
          const lastMessage = (t.messages && t.messages.length > 0) ? t.messages[0] : null;
          %>
          <a href="/messages/thread/<%= t.id %>" class="list-group-item list-group-item-action border-0 border-bottom">
            <div class="d-flex align-items-center gap-3">
              <!-- Profile Image -->
              <% if (partnerImage) { %>
                <img src="<%= partnerImage %>" alt="<%= partnerName %>" class="rounded-circle"
                  style="width: 50px; height: 50px; object-fit: cover;">
                <% } else { %>
                  <div class="rounded-circle bg-light d-flex align-items-center justify-content-center"
                    style="width: 50px; height: 50px;">
                    <i class="fas fa-user text-muted"></i>
                  </div>
                  <% } %>

                    <!-- Content -->
                    <div class="flex-grow-1 min-width-0">
                      <div class="d-flex justify-content-between align-items-start">
                        <h6 class="mb-1 fw-bold">
                          <%= partnerName %>
                        </h6>
                        <small class="text-muted">
                          <%= new Date(t.updatedAt).toLocaleDateString() %>
                        </small>
                      </div>
                      <% if (listingTitle) { %>
                        <p class="mb-1 small text-primary"><i class="fas fa-tag me-1"></i>
                          <%= listingTitle %>
                        </p>
                        <% } %>
                          <% if (lastMessage) { %>
                            <p class="mb-0 text-muted small text-truncate">
                              <%= lastMessage.content.substring(0, 50) %>
                                <%= lastMessage.content.length> 50 ? '...' : '' %>
                            </p>
                            <% } else { %>
                              <p class="mb-0 text-muted small fst-italic">No messages yet</p>
                              <% } %>
                    </div>
            </div>
          </a>
          <% }) %>
      </div>
      <% } %>