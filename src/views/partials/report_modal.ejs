<div class="modal fade" id="reportModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="POST" action="/reports">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="hidden" name="targetUserId" id="reportTargetId">
        <input type="hidden" name="sessionId" id="reportSessionId">
        <input type="hidden" name="messageThreadId" id="reportThreadId">
        <div class="modal-header">
          <h5 class="modal-title">Report User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-2">Reporting <strong id="reportTargetName"></strong></div>
          <div class="mb-3">
            <label class="form-label">Reason</label>
            <textarea class="form-control" name="reason" rows="4" required minlength="10" maxlength="1000" placeholder="Describe the issue..."></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button class="btn btn-danger" type="submit">Submit Report</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  (function(){
    const modalEl = document.getElementById('reportModal');
    let bsModal;
    function ensure(){ if (!bsModal) bsModal = new bootstrap.Modal(modalEl); }
    document.addEventListener('click', (e) => {
      const btn = e.target.closest('.js-report');
      if (!btn) return;
      document.getElementById('reportTargetId').value = btn.getAttribute('data-target-id');
      document.getElementById('reportTargetName').textContent = btn.getAttribute('data-target-name') || 'User';
      document.getElementById('reportSessionId').value = btn.getAttribute('data-session-id') || '';
      document.getElementById('reportThreadId').value = btn.getAttribute('data-thread-id') || '';
      ensure();
      bsModal.show();
    });
  })();
</script>


