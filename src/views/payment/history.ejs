<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 mb-0">Payment History</h1>
    <a class="btn btn-outline-secondary" href="/profile">Back to Profile</a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <% if (!transactions || transactions.length===0) { %>
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-credit-card fs-1 d-block mb-2"></i>
                        <p>No transactions yet.</p>
                    </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Description</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Invoice</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% transactions.forEach(t=> { %>
                                        <tr>
                                            <td>
                                                <%= new Date(t.createdAt).toLocaleDateString() %>
                                            </td>
                                            <td>
                                                <%= t.description || '-' %>
                                            </td>
                                            <td>MYR <%= parseFloat(t.amount).toFixed(2) %>
                                            </td>
                                            <td>
                                                <% if (t.status==='succeeded' ) { %>
                                                    <span class="badge bg-success">Succeeded</span>
                                                    <% } else if (t.status==='pending' ) { %>
                                                        <span class="badge bg-warning text-dark">Pending</span>
                                                        <% } else if (t.status==='refunded' ) { %>
                                                            <span class="badge bg-info">Refunded</span>
                                                            <% } else { %>
                                                                <span class="badge bg-danger">Failed</span>
                                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (t.invoice) { %>
                                                    <a href="/payment/invoice/<%= t.invoice.id %>"
                                                        class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-file-earmark-text"></i> View
                                                    </a>
                                                    <% } else { %>
                                                        -
                                                        <% } %>
                                            </td>
                                            <td>
                                                <% if (t.status==='pending' ) { %>
                                                    <form action="/payment/simulate-success/<%= t.id %>" method="POST"
                                                        class="d-inline">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <button type="submit" class="btn btn-sm btn-success">Simulate
                                                            Pay</button>
                                                    </form>
                                                    <% } else if (t.status==='succeeded' ) { %>
                                                        <form action="/payment/refund/<%= t.id %>" method="POST"
                                                            class="d-inline refund-form">
                                                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                            <button type="submit"
                                                                class="btn btn-sm btn-outline-danger">Refund</button>
                                                        </form>
                                                        <% } else { %>
                                                            -
                                                            <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.refund-form').forEach(form => {
            form.addEventListener('submit', function (e) {
                e.preventDefault();
                if (confirm('Are you sure you want to request a refund for this transaction?')) {
                    this.submit();
                }
            });
        });
    });
</script>