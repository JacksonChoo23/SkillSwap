<h1 class="h4 mb-3">Create Listing</h1>

<form method="POST" action="/listings/create" class="row g-3">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <div class="col-12">
    <label class="form-label">Title</label>
    <input class="form-control" name="title" required maxlength="255" placeholder="Your listing title">
  </div>

  <div class="col-12">
    <label class="form-label">Description</label>
    <textarea class="form-control" name="description" rows="6" required placeholder="What do you teach or want to learn? Any details."></textarea>
  </div>

  <div class="col-12 d-flex gap-2">
    <button class="btn btn-primary" type="submit">Submit</button>
    <a class="btn btn-outline-secondary" href="/listings">Cancel</a>
  </div>
</form>
