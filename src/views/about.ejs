<!-- src/views/about.ejs -->
<div class="container py-4">
  <!-- Hero -->
  <section class="bg-light rounded-3 p-4 p-md-5 mb-4">
    <div class="d-flex align-items-center gap-3">
      <div class="display-6 mb-0">
        <i class="fas fa-exchange-alt text-primary me-2"></i> About SkillSwap MY
      </div>
    </div>
    <p class="lead mt-3 mb-0">
      SkillSwap MY is a peer-to-peer platform where Malaysians teach what they know and learn what they love — together.
      Trade time, share knowledge, and grow your community through skill exchange.
    </p>
  </section>

  <!-- Why / Mission -->
  <section class="mb-5">
    <div class="row g-4">
      <div class="col-md-6">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="h5"><i class="fas fa-bullseye text-primary me-2"></i>Our Mission</h2>
            <p class="mb-0">
              Make learning accessible, social, and sustainable. We believe everyone has something to offer:
              from cooking and guitar to coding and languages — swap skills, not money.
            </p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card h-100">
          <div class="card-body">
            <h2 class="h5"><i class="fas fa-seedling text-primary me-2"></i>What You’ll Get</h2>
            <ul class="mb-0">
              <li>Discover people near you who teach or learn the same skills</li>
              <li>Create listings and receive session requests</li>
              <li>Track progress and reputation with ratings & points</li>
              <li>Stay safe with built-in content moderation and reporting</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How it works -->
  <section class="mb-5">
    <h2 class="h4 mb-3">How It Works</h2>
    <div class="row row-cols-1 row-cols-md-3 g-3">
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <div class="h2 mb-2"><i class="fas fa-user-plus"></i></div>
            <h3 class="h6">1) Create your profile</h3>
            <p class="mb-0">Add your location, bio, and skills you can teach or want to learn.</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <div class="h2 mb-2"><i class="fas fa-list"></i></div>
            <h3 class="h6">2) Post & browse listings</h3>
            <p class="mb-0">Publish a listing or explore others — then send a message or session request.</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <div class="h2 mb-2"><i class="fas fa-handshake"></i></div>
            <h3 class="h6">3) Swap and learn</h3>
            <p class="mb-0">Meet online or in-person, exchange time fairly, and leave a rating after each session.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Key features -->
  <section class="mb-5">
    <h2 class="h4 mb-3">Key Features</h2>
    <div class="row row-cols-1 row-cols-md-3 g-3">
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h3 class="h6"><i class="fas fa-magnifying-glass text-primary me-2"></i>Smart browsing & matching</h3>
            <p class="mb-0">Filter by skill, category, and location to find the right partner fast.</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h3 class="h6"><i class="fas fa-comments text-primary me-2"></i>Message history</h3>
            <p class="mb-0">Keep all conversations and contacts organized in one place.</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h3 class="h6"><i class="fas fa-calendar-check text-primary me-2"></i>Session requests</h3>
            <p class="mb-0">Propose times, confirm sessions, and track your learning journey.</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h3 class="h6"><i class="fas fa-star text-primary me-2"></i>Ratings & progress</h3>
            <p class="mb-0">Build reputation, earn points, and unlock badges as you contribute.</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h3 class="h6"><i class="fas fa-scale-balanced text-primary me-2"></i>Fair-trade calculator</h3>
            <p class="mb-0">Estimate balanced exchanges between different skills or time spent.</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h3 class="h6"><i class="fas fa-shield-halved text-primary me-2"></i>Safety-first</h3>
            <p class="mb-0">AI-assisted moderation (Gemini), reporting tools, and privacy controls.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Safety & guidelines -->
  <section class="mb-5">
    <div class="card">
      <div class="card-body">
        <h2 class="h5 mb-3"><i class="fas fa-user-shield text-primary me-2"></i>Safety & Community Guidelines</h2>
        <ul class="mb-0">
          <li>Keep conversations respectful. Hate speech, harassment, and adult content are not allowed.</li>
          <li>Use in-app tools to report suspicious behaviour or content.</li>
          <li>For in-person sessions, meet in public spaces and share details with a friend.</li>
          <li>Do not share passwords or sensitive personal data.</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="mb-5">
    <h2 class="h4 mb-3">FAQ</h2>
    <div class="accordion" id="aboutFaq">
      <div class="accordion-item">
        <h2 class="accordion-header" id="q1">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a1" aria-expanded="false" aria-controls="a1">
            Is SkillSwap MY free to use?
          </button>
        </h2>
        <div id="a1" class="accordion-collapse collapse" aria-labelledby="q1" data-bs-parent="#aboutFaq">
          <div class="accordion-body">
            Yes. The core experience — creating listings, browsing, and exchanging skills — is free.
          </div>
        </div>
      </div>

      <div class="accordion-item">
        <h2 class="accordion-header" id="q2">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a2" aria-expanded="false" aria-controls="a2">
            How do I find a good match?
          </button>
        </h2>
        <div id="a2" class="accordion-collapse collapse" aria-labelledby="q2" data-bs-parent="#aboutFaq">
          <div class="accordion-body">
            Use filters (skill, category, location), check ratings, and read listings carefully. Start with a short trial session.
          </div>
        </div>
      </div>

      <div class="accordion-item">
        <h2 class="accordion-header" id="q3">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#a3" aria-expanded="false" aria-controls="a3">
            Is it safe to meet in person?
          </button>
        </h2>
        <div id="a3" class="accordion-collapse collapse" aria-labelledby="q3" data-bs-parent="#aboutFaq">
          <div class="accordion-body">
            Always meet in public spaces first, keep chats on the platform, and use the report button if anything feels off.
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to action -->
  <section class="text-center mb-4">
    <% if (isAuthenticated) { %>
      <a href="/listings/create" class="btn btn-primary me-2">
        <i class="fas fa-plus me-1"></i> Create your first listing
      </a>
      <a href="/browse" class="btn btn-outline-primary">
        <i class="fas fa-compass me-1"></i> Browse skills
      </a>
    <% } else { %>
      <a href="/auth/register" class="btn btn-primary me-2">
        <i class="fas fa-user-plus me-1"></i> Get started — it’s free
      </a>
      <a href="/listings" class="btn btn-outline-primary">
        <i class="fas fa-list me-1"></i> Explore listings
      </a>
    <% } %>
  </section>

  <!-- Contact -->
  <section class="mb-5">
    <div class="card">
      <div class="card-body d-md-flex align-items-center justify-content-between">
        <div class="me-3">
          <h2 class="h6 mb-1"><i class="fas fa-envelope text-primary me-2"></i>Contact</h2>
          <p class="mb-0">Questions or feedback? Email us at
            <a href="mailto:support@skillswap.my">support@skillswap.my</a>.
          </p>
        </div>
        <div class="mt-3 mt-md-0">
          <a href="/tips" class="btn btn-outline-secondary btn-sm"><i class="fas fa-lightbulb me-1"></i> Tips</a>
          <a href="/reports" class="btn btn-outline-secondary btn-sm ms-2"><i class="fas fa-flag me-1"></i> Report an issue</a>
        </div>
      </div>
    </div>
  </section>
</div>
