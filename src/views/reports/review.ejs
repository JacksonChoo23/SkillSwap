<!-- src/views/reports/review.ejs -->
<div class="container py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="bi bi-clipboard-check me-2"></i>Report Review</h2>
        <div class="d-flex align-items-center gap-2">
            <span
                class="badge bg-<%= report.status === 'escalated' ? 'warning' : report.status === 'resolved' || report.status === 'auto_penalized' ? 'success' : 'info' %> fs-6">
                <%= report.status.replace('_', ' ' ).toUpperCase() %>
            </span>
            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>Back
            </a>
        </div>
    </div>

    <div class="row g-4 align-items-stretch">
        <!-- Left Column: AI Analysis -->
        <div class="col-lg-7 d-flex">
            <% if (report.status==='resolved' || report.status==='auto_penalized' ) { %>
                <!-- Admin Action Details (Replaces AI Result) -->
                <div class="card border-0 shadow-sm flex-fill border-primary">
                    <div class="card-header bg-primary text-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-shield-check me-2"></i>Admin Action Details
                            </h5>
                            <span class="badge bg-white text-primary">
                                Status: <%= report.status.replace('_', ' ' ).toUpperCase() %>
                            </span>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <!-- Verdict -->
                        <div class="text-center mb-4">
                            <% if (report.penaltyApplied) { %>
                                <i class="bi bi-exclamation-octagon-fill text-danger" style="font-size: 3rem;"></i>
                                <h4 class="text-danger mt-2 mb-0">Penalty Applied</h4>
                                <p class="text-muted mt-2">The user has been penalized based on admin review.</p>
                                <% } else { %>
                                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                                    <h4 class="text-success mt-2 mb-0">Report Resolved</h4>
                                    <p class="text-muted mt-2">The report was resolved without penalty
                                        (Dismissed/Warning).</p>
                                    <% } %>
                        </div>

                        <!-- Admin Notes -->
                        <div class="bg-light rounded p-3 mb-4">
                            <h6 class="fw-semibold mb-2"><i class="bi bi-pencil-square me-2"></i>Admin Notes</h6>
                            <p class="mb-0 text-dark">
                                <%= report.adminNotes || 'No notes provided by admin.' %>
                            </p>
                        </div>

                        <!-- Details Grid -->
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="border rounded p-3 h-100 text-center">
                                    <small class="text-muted d-block mb-1">Action Taken</small>
                                    <% if (report.penaltyApplied) { %>
                                        <strong class="text-danger fs-5">
                                            <%= report.penaltyApplied %>
                                        </strong>
                                        <% } else { %>
                                            <strong class="text-success fs-5">Resolved / Dismissed</strong>
                                            <% } %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="border rounded p-3 h-100 text-center">
                                    <small class="text-muted d-block mb-1">Severity Level</small>
                                    <span class="badge bg-<%= 
                                    report.severity === 'critical' ? 'danger' : 
                                    report.severity === 'high' ? 'warning' : 
                                    report.severity === 'medium' ? 'warning' : 
                                    report.severity === 'low' ? 'info' : 'secondary' 
                                %> text-uppercase fs-6 mt-1">
                                        <%= report.severity || 'NONE' %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } else { %>
                    <!-- AI Analysis Card (Original) -->
                    <div class="card border-0 shadow-sm flex-fill">
                        <div
                            class="card-header bg-<%= aiAnalysis.verdict === 'violation' ? 'danger' : aiAnalysis.verdict === 'harmless' ? 'success' : 'warning' %> text-white py-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-robot me-2"></i>AI Analysis Result
                                </h5>
                                <span class="badge bg-white text-dark">
                                    Confidence: <%= Math.round((aiAnalysis.confidence || 0) * 100) %>%
                                </span>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <!-- Verdict -->
                            <div class="text-center mb-3">
                                <% if (aiAnalysis.verdict==='violation' ) { %>
                                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 3rem;"></i>
                                    <h4 class="text-danger mt-2 mb-0">Policy Violation Detected</h4>
                                    <% } else if (aiAnalysis.verdict==='harmless' ) { %>
                                        <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                                        <h4 class="text-success mt-2 mb-0">No Violation Found</h4>
                                        <% } else { %>
                                            <i class="bi bi-question-circle-fill text-warning"
                                                style="font-size: 3rem;"></i>
                                            <h4 class="text-warning mt-2 mb-0">Uncertain - Requires Review</h4>
                                            <% } %>
                            </div>

                            <!-- Summary -->
                            <div class="bg-light rounded p-3 mb-3">
                                <h6 class="fw-semibold mb-1"><i class="bi bi-chat-left-text me-2"></i>Summary</h6>
                                <p class="mb-0 small">
                                    <%= aiAnalysis.summary || 'No summary available' %>
                                </p>
                            </div>

                            <!-- Details Grid -->
                            <div class="row g-2 mb-3">
                                <div class="col-4">
                                    <div class="border rounded p-2 text-center h-100">
                                        <small class="text-muted d-block">Category</small>
                                        <strong class="text-capitalize small">
                                            <%= aiAnalysis.category || 'N/A' %>
                                        </strong>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="border rounded p-2 text-center h-100">
                                        <small class="text-muted d-block">Severity</small>
                                        <span class="badge bg-<%= 
                                    report.severity === 'critical' ? 'danger' : 
                                    report.severity === 'high' ? 'warning' : 
                                    report.severity === 'medium' ? 'warning' : 
                                    report.severity === 'low' ? 'info' : 'secondary' 
                                %> text-uppercase">
                                            <%= report.severity %>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="border rounded p-2 text-center h-100">
                                        <small class="text-muted d-block">Action</small>
                                        <strong class="text-capitalize small">
                                            <%= aiAnalysis.recommendedPenalty?.replace('_', ' ' ) || 'N/A' %>
                                        </strong>
                                    </div>
                                </div>
                            </div>

                            <!-- Reasoning -->
                            <% if (aiAnalysis.reasoning) { %>
                                <div class="border-start border-3 border-primary ps-3 mb-3">
                                    <h6 class="fw-semibold mb-1"><i class="bi bi-lightbulb me-2"></i>AI Reasoning</h6>
                                    <p class="text-muted mb-0 small">
                                        <%= aiAnalysis.reasoning %>
                                    </p>
                                </div>
                                <% } %>

                                    <!-- Penalty Info (if violation) -->
                                    <% if (penaltyDisplay) { %>
                                        <div
                                            class="alert alert-<%= penaltyDisplay.color %> d-flex align-items-start mb-0 py-2">
                                            <i class="bi bi-<%= penaltyDisplay.icon %> fs-5 me-2"></i>
                                            <div>
                                                <strong class="small">Recommended Penalty:</strong>
                                                <span class="small">
                                                    <%= penaltyDisplay.description %>
                                                </span>
                                            </div>
                                        </div>
                                        <% } %>
                        </div>
                    </div>
                    <% } %>
        </div>

        <!-- Right Column: Report Details & Actions -->
        <div class="col-lg-5 d-flex flex-column">
            <!-- Report Details -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-header bg-light py-2">
                    <h6 class="mb-0"><i class="bi bi-file-text me-2"></i>Report Details</h6>
                </div>
                <div class="card-body py-3">
                    <!-- Target User -->
                    <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                        <img src="<%= report.targetUser?.profileImage || '/images/default-avatar.png' %>"
                            alt="<%= report.targetUser?.name %>" class="rounded-circle me-3"
                            style="width: 45px; height: 45px; object-fit: cover;">
                        <div>
                            <small class="text-muted">Reported User</small>
                            <h6 class="mb-0">
                                <%= report.targetUser?.name || 'Unknown User' %>
                            </h6>
                        </div>
                    </div>

                    <!-- Reason -->
                    <div class="mb-3">
                        <small class="text-muted">Report Reason</small>
                        <p class="mb-0 small">
                            <%= report.reason %>
                        </p>
                    </div>

                    <!-- Evidence -->
                    <% if (report.evidence && report.evidence.length> 0) { %>
                        <div>
                            <small class="text-muted d-block mb-2">Evidence (<%= report.evidence.length %>
                                    file(s))</small>
                            <div class="row g-2">
                                <% report.evidence.forEach(function(img, idx) { %>
                                    <div class="col-4">
                                        <img src="<%= img %>" class="img-thumbnail evidence-thumbnail"
                                            style="width:100%;height:60px;object-fit:cover;cursor:pointer;"
                                            alt="Evidence <%= idx + 1 %>" data-bs-toggle="modal"
                                            data-bs-target="#evidenceModal" data-img-src="<%= img %>"
                                            data-img-alt="Evidence <%= idx + 1 %>">
                                    </div>
                                    <% }); %>
                            </div>
                        </div>
                        <% } %>

                            <!-- Chat Evidence -->
                            <% if (report.chatEvidence && report.chatEvidence.length> 0) { %>
                                <div class="mt-3">
                                    <small class="text-muted d-block mb-2">Attached Chat Log</small>
                                    <div class="border rounded p-2 bg-light"
                                        style="max-height: 250px; overflow-y: auto;">
                                        <% report.chatEvidence.forEach(function(msg) { %>
                                            <div class="mb-2 pb-2 border-bottom">
                                                <div class="d-flex justify-content-between">
                                                    <small class="fw-bold">
                                                        <%= msg.sender %>
                                                    </small>
                                                    <small class="text-muted" style="font-size: 0.7em;">
                                                        <%= new Date(msg.time).toLocaleString() %>
                                                    </small>
                                                </div>
                                                <p class="mb-0 small text-break">
                                                    <%= msg.content %>
                                                </p>
                                            </div>
                                            <% }); %>
                                    </div>
                                </div>
                                <% } %>
                </div>
            </div>

            <!-- Review Timeline -->
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body py-3">
                    <h6 class="fw-semibold mb-2"><i class="bi bi-clock me-2"></i>Review Timeline</h6>
                    <div class="d-flex justify-content-between small">
                        <span>
                            <span class="badge bg-success rounded-pill me-1">✓</span>
                            AI Analysis: <strong class="text-success">
                                <%= estimatedTimes.ai %>
                            </strong>
                        </span>
                        <span>
                            <span class="badge bg-secondary rounded-pill me-1">◦</span>
                            Manual: <strong>
                                <%= estimatedTimes.manual %>
                            </strong>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <% if (report.status==='ai_reviewed' ) { %>
                <div class="card border-0 shadow-sm flex-grow-1">
                    <div class="card-body py-3">
                        <h6 class="fw-semibold mb-3">What would you like to do?</h6>
                        <div class="d-grid gap-2">
                            <form action="/reports/<%= report.id %>/accept" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-lg me-2"></i>
                                    <% if (aiAnalysis.verdict==='violation' ) { %>
                                        Accept - Apply Penalty
                                        <% } else { %>
                                            Accept This Result
                                            <% } %>
                                </button>
                            </form>
                            <form action="/reports/<%= report.id %>/escalate" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-outline-warning w-100">
                                    <i class="bi bi-person-exclamation me-2"></i>Disagree - Manual Review
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } else if (report.status==='escalated' ) { %>
                    <div class="alert alert-warning mb-0 flex-grow-1">
                        <i class="bi bi-hourglass-split me-2"></i>
                        <strong>Escalated to Manual Review</strong> - Our team will review within 24-48 hours.
                    </div>
                    <% } else if (report.status==='resolved' || report.status==='auto_penalized' ) { %>
                        <div class="card border-0 shadow-sm border-success flex-grow-1">
                            <div class="card-header bg-success text-white py-3">
                                <h6 class="mb-0">
                                    <i class="bi bi-check-circle-fill me-2"></i>Report Resolved
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                                        <i class="bi bi-shield-check text-success fs-4"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">Action Completed</h6>
                                        <p class="text-muted mb-0 small">This report has been reviewed and resolved.</p>
                                    </div>
                                </div>
                                <% if (report.penaltyApplied) { %>
                                    <div class="bg-light rounded p-3">
                                        <div class="row">
                                            <div class="col-6">
                                                <small class="text-muted d-block">Penalty Applied</small>
                                                <strong class="text-danger">
                                                    <%= report.penaltyApplied %>
                                                </strong>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted d-block">Resolved On</small>
                                                <strong>
                                                    <%= new Date(report.updatedAt).toLocaleDateString() %>
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                    <% } else { %>
                                        <div class="alert alert-info mb-0">
                                            <i class="bi bi-info-circle me-2"></i>
                                            No penalty was required. Thank you for your report.
                                        </div>
                                        <% } %>
                            </div>
                        </div>
                        <% } %>


        </div>
    </div>
</div>

<!-- Evidence Image Modal -->
<div class="modal fade" id="evidenceModal" tabindex="-1" aria-labelledby="evidenceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="evidenceModalLabel">
                    <i class="bi bi-image me-2"></i>Evidence Image
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-0">
                <img src="" alt="Evidence" id="evidenceModalImage" class="img-fluid"
                    style="max-height: 70vh; width: auto;">
            </div>
            <div class="modal-footer justify-content-between">
                <span class="text-muted small" id="evidenceModalAlt"></span>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const evidenceModal = document.getElementById('evidenceModal');
        if (evidenceModal) {
            evidenceModal.addEventListener('show.bs.modal', function (event) {
                const thumbnail = event.relatedTarget;
                const imgSrc = thumbnail.getAttribute('data-img-src');
                const imgAlt = thumbnail.getAttribute('data-img-alt');

                const modalImage = document.getElementById('evidenceModalImage');
                const modalAlt = document.getElementById('evidenceModalAlt');

                modalImage.src = imgSrc;
                modalImage.alt = imgAlt;
                modalAlt.textContent = imgAlt;
            });
        }
    });
</script>