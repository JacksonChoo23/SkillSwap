<!-- CTA Section -->
<div class="bg-primary text-white py-5">
    <div class="container text-center">
        <h3 class="mb-3">Ready to Start Your Skill Exchange Journey?</h3>
        <p class="lead mb-4">Join thousands of Malaysians who are already learning and teaching on SkillSwap MY.</p>
        <% if (!isAuthenticated) { %>
            <a href="/auth/register" class="btn btn-light btn-lg">
                <i class="fas fa-rocket me-2"></i>
                Join Now - It's Free!
            </a>
        <% } else { %>
            <a href="/match" class="btn btn-light btn-lg">
                <i class="fas fa-search me-2"></i>
                Find Your Next Match
            </a>
        <% } %>
    </div>
</div>

