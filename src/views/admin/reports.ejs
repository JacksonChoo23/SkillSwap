<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h4 mb-0">Reports</h1>
  <a class="btn btn-outline-secondary" href="/admin">Back</a>
</div>

<div class="card">
  <div class="card-body">
    <form class="row g-2 mb-3" method="GET" action="/admin/reports">
      <div class="col-md-3">
        <select class="form-select" name="status">
          <option value="">All statuses</option>
          <option value="open">open</option>
          <option value="closed">closed</option>
        </select>
      </div>
      <div class="col-md-3">
        <input class="form-control" name="q" placeholder="Search reason or users">
      </div>
      <div class="col-md-2 d-grid">
        <button class="btn btn-outline-secondary">Filter</button>
      </div>
    </form>

    <div class="table-responsive">
      <table class="table table-sm align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Reporter</th>
            <th>Target</th>
            <th>Reason</th>
            <th>Context</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% (reports || []).forEach(r => { %>
            <tr>
              <td><%= r.id %></td>
              <td><%= r.reporter?.name || '-' %></td>
              <td><%= r.targetUser?.name || '-' %></td>
              <td style="white-space: pre-wrap"><%= r.reason %></td>
              <td class="small">
                <% if (r.listingId) { %>Listing #<%= r.listingId %><br><% } %>
                <% if (r.sessionId) { %>Session #<%= r.sessionId %><br><% } %>
                <% if (r.messageThreadId) { %>Thread #<%= r.messageThreadId %><% } %>
              </td>
              <td>
                <span class="badge <%= r.status === 'open' ? 'bg-warning text-dark' : 'bg-secondary' %>"><%= r.status %></span>
              </td>
              <td>
                <% if (r.status === 'open') { %>
                  <form method="POST" action="/admin/reports/<%= r.id %>/close" class="d-inline">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-sm btn-success">Close</button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h4 mb-0">Manage Reports</h1>
  <a class="btn btn-outline-secondary btn-sm" href="/admin">Back to Dashboard</a>
</div>

<div class="table-responsive">
  <table class="table table-sm align-middle">
    <thead>
      <tr>
        <th>ID</th>
        <th>Reporter</th>
        <th>Target</th>
        <th>Reason</th>
        <th>Status</th>
        <th>Created</th>
        <th class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% reports.forEach(r => { %>
        <tr>
          <td>#<%= r.id %></td>
          <td><%= r.reporter?.name || 'User' %></td>
          <td><%= r.targetUser?.name || 'User' %></td>
          <td style="max-width: 380px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;"><%= r.reason %></td>
          <td><span class="badge <%= r.status==='open'?'bg-danger':'bg-success' %>"><%= r.status %></span></td>
          <td><%= new Date(r.createdAt).toLocaleString() %></td>
          <td class="text-end">
            <form method="POST" action="/admin/reports/<%= r.id %>/close" class="d-inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-sm btn-primary" <%= r.status==='closed'?'disabled':'' %>>Close</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
