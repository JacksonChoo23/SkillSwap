<div class="d-flex align-items-center justify-content-between mb-3">
  <h1 class="h4 mb-0">Manage Categories</h1>
  <a class="btn btn-outline-secondary btn-sm" href="/admin">Back to Dashboard</a>
</div>

<div class="card mb-4">
  <div class="card-body">
    <h2 class="h6 text-muted mb-3">Add Category</h2>
    <form method="POST" action="/admin/categories" class="row g-2">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="col-md-6">
        <label class="form-label">Name</label>
        <input type="text" name="name" class="form-control" minlength="2" required>
      </div>
      <div class="col-12">
        <button class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-sm align-middle">
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Skills</th>
        <th class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(c => { %>
        <tr>
          <td><%= c.name %></td>
          <td>
            <span class="badge <%= c.isActive ? 'bg-success' : 'bg-secondary' %>">
              <%= c.isActive ? 'Active' : 'Inactive' %>
            </span>
          </td>
          <td>
            <% if (Array.isArray(c.Skills) && c.Skills.length) { %>
              <span class="text-muted small"><%= c.Skills.length %> skill(s)</span>
            <% } else { %>
              <span class="text-muted small">0</span>
            <% } %>
          </td>
          <td class="text-end">
            <form method="POST" action="/admin/categories/<%= c.id %>/toggle" class="d-inline">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-sm <%= c.isActive ? 'btn-warning' : 'btn-success' %>">
                <%= c.isActive ? 'Deactivate' : 'Activate' %>
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
